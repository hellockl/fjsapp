/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.newitem {
  display: flex;
  border-bottom: 1rpx solid #f4f4f4;
  padding: 30rpx;
  cursor: pointer;
  position: relative;
}

.newitem .poster {
  width: 200rpx;
  height: 140rpx;
  margin-right: 30rpx;
}

.newitem .meta {
  flex: 1;
  height: 140rpx;

}

.newitem .meta .title{
  display: block;
  font-size: 36rpx;
  letter-spacing: 2rpx;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.news {
  padding-top: 20rpx;
  border-top: 2rpx solid #f4f4f4;
}
.newitem .meta .other {
  color: #999;
  margin-top: 16rpx;
}
.product-tag {
    width: 100%;
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
}

.product-tag-item {
    padding: 4rpx 6rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
    box-shadow: 0 0 0 1px #ccc;
    border-top: 1px solid #fff;
    border-radius: 10rpx;
    background-color: #fafafa;
    color: #666;
}
.title_a{
    height: 0.6rem;
    line-height: 0.6rem;
    color: #999;
    font-size: 10pt
}

.newitem .meta .other .source {
  float: left;
  font-size: 23rpx;
}
.newitem .meta .other .source .logo {
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  margin-right: 18rpx;
}
.poster{
  border:1px solid #dadada;

  
}
.newitem .meta .other .source .detail {
  margin-right: 18rpx;
}
.newitem .meta .other .source .updateTime {

}
.newitem .meta .other .comment {
  float: right;
  margin-right: 30rpx;
  font-size: 24rpx;
  display: inline-block;
}
.newitem .meta .other .zhuanti {
  float: right;
  margin-right: 30rpx;
  margin-top: -2rpx;
  padding: 0 8rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  color: #de0000;
  border: 1rpx solid #de0000;
  border-radius: 6rpx;
  display: inline-block;
}

.clearfloat::after {
  content: '';
  clear: both;
  display: block;
}
.film-tag {
    width: 100%;
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
}

.film-tag-item {
    padding: 4rpx 6rpx;
    margin-right: 10rpx;
    font-size: 24rpx;
    box-shadow: 0 0 0 1px #ccc;
    border-top: 1px solid #fff;
    border-radius: 10rpx;
    background-color: #fafafa;
    color: #666;
}